<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/setting_item_height"
    android:background="@drawable/setting_item_ripple_background">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="@dimen/common_descriptor_text_size"
        android:textColor="@color/common_descriptor_text_color"
        android:layout_marginLeft="@dimen/common_margin_medium"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/common_listview_item_icon_size"
        android:layout_height="@dimen/common_listview_item_icon_size"
        android:layout_marginLeft="@dimen/common_margin_medium"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/subtitle"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/setting_text_margin_left"
        android:textSize="@dimen/common_descriptor_text_size"
        android:textColor="@android:color/white"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="@dimen/common_descriptor_text_size"
        android:textColor="@android:color/white"
        android:layout_marginRight="@dimen/common_margin_medium"
        android:layout_alignParentRight="true"/>

</RelativeLayout>